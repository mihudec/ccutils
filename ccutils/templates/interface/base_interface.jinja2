    {% include "interface/l2_interface.jinja2" %}
{% elif "l3" in params.flags %}
    {% include "interface/l3_interface.jinja2" %}
{% endif %}
{% if (not params.cdp and common.cdp) %}
 no cdp enable
{% elif (params.cdp and not common.cdp) %}
 cdp enable
{% endif %}
